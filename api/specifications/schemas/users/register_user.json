{
    "title": "Register User",
    "description": "Create a User object",
    "type": "object",
    "$schema": "http://json-schema.org/draft-04/schema",
    "required": [
        "username",
        "email",
        "password"
    ],
    "properties": {
        "username": {
            "type": "string",
            "minLength": 2,
            "maxLength": 10
        },
        "email": {
            "type": "string",
            "format": "email",
            "minLength": 3
        }
    }
}
